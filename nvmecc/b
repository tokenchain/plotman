#!/bin/bash

build(){
  env GOOS=darwin GOARCH=amd64 go build -o plmo vncc.go
}
build_b(){
  env GOOS=darwin GOARCH=amd64 go build -o plmo bin.go
}
run(){
  ./plmo $FROM $TO 90000000 cyberpunk2.log
}
unlock(){
  ./plmo $FROM update no
}
lock(){
  ./plmo $FROM update yes
}
testfiles(){
cd temp/
for (( i = 0; i < 100; i++ )); do
  name="$(cat /dev/urandom | env LC_CTYPE=C tr -cd 'a-f0-9' | head -c 32).plot"
  openssl rand -out ${name} -base64 $(( 2**30 * 1/4 ))
done
}
rundaemon(){
  nohup ./plmo $FROM $TO 50010001 ff.log &
}
#FROM=/Users/hesdx/Documents/ipfs/plotman/nvmecc/temp
#TO=/Users/hesdx/Documents/ipfs/plotman/nvmecc/dst/
FROM=/Users/hesdx/Downloads/cyberpunk2/Cyberpunk.2077-GOG
TO=/Volumes/DISK_IMG/cybe/